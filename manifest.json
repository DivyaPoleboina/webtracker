{
    "manifest_version": 2,
    "name": "Time Tracker",
    "version":"1.0.0",
    "description":"Monitors the duration spent on different websites.",
    "icons": { 
        "16": "icons/image1.jpeg",
        "48": "icons/icon2.png",
        "128": "icons/icon3.png"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "browser_action":{
        "default_popup":"popup.html",
        "default_icon": {
            "16": "icons/icon2.png"
        },
        "default_title":"Time Tracker"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
	"notifications",
        "webNavigation"
    ]
}